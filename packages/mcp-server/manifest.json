{
  "dxt_version": "0.1",
  "name": "scalev-mcp",
  "version": "1.1.0",
  "description": "The official MCP Server for the Scalev API API",
  "author": {
    "name": "Scalev API",
    "email": "tech@scalev.id"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalev-id/sdk.git"
  },
  "homepage": "https://github.com/scalev-id/sdk/tree/main/packages/mcp-server#readme",
  "documentation": "https://developers.scalev.id",
  "server": {
    "type": "node",
    "entry_point": "${__dirname}/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "SCALEV_API_API_KEY": "${user_config.SCALEV_API_API_KEY}"
      }
    }
  },
  "user_config": {
    "SCALEV_API_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": false,
      "type": "string"
    }
  },
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
